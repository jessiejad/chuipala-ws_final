@model chuipala_ws.Models.Absence
@{
    ViewBag.Title = "Absence";
}
<h2>Détails</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <h4>Absence</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.EventID)
        <dl class="dl-horizontal">
            <dt>
                Personne
            </dt>

            <dd>
                @Html.DisplayFor(model => model.User.DisplayFullName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Reason)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Reason)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.StartDateTime)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StartDateTime)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.StopDateTime)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StopDateTime)
            </dd>


            <dt>
                @Html.DisplayNameFor(model => model.Value)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Value)
                @Html.DisplayFor(model => model.ValueUnit)
            </dd>
            <dt></dt>
            <dd>
                @Html.ActionLink("Modifier", "Edit", new { id = Model.EventID })
            </dd>
        </dl>
    </div>
    
    <h4>Cours concernés</h4>

    <div class="form-group">
        <label class="col-md-2 control-label">
            Cours
        </label>
        <div class="col-md-10">
            @foreach (var item in ViewBag.Classes)
            {
                <input type="checkbox" name="SelectedClasses" value="@item.Value" class="checkbox-inline" checked="@item.Selected" />
                @item.Text<br />
            }
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Sauvegader" />
        </div>
    </div>

    <div>
        @Html.ActionLink("Retour à la liste", "Index")
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
